{
  "name": "tiago-delivery",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run docker:start && dotenv -e .env.local -- prisma generate && dotenv -e .env.local -- prisma migrate deploy && next dev -p 3000",
    "build": "prisma generate && next build",
    "vercel-build": "prisma generate && prisma migrate resolve --applied 20260123225137_baseline && prisma migrate deploy && next build",
    "start": "next start -p 3000",
    "docker:start": "docker-compose up -d && sleep 5",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "prisma:generate": "dotenv -e .env.local -- prisma generate",
    "prisma:migrate": "dotenv -e .env.local -- prisma migrate dev",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.7.0",
    "dotenv": "^17.2.3",
    "next": "^16.1.1",
    "next-auth": "^4.24.13",
    "nodemailer": "^7.0.12",
    "pg": "^8.16.3",
    "prisma": "^5.7.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-imask": "^7.6.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.23",
    "dotenv-cli": "^11.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18"
  }
}
